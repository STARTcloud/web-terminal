# Server Configuration
server:
  # Port to run the server on
  port: 3000
  # SSL certificate paths (required for HTTPS)
  ssl:
    cert: /etc/letsencrypt/live/your-domain.com/fullchain.pem
    key: /etc/letsencrypt/live/your-domain.com/privkey.pem

# User Authentication
# Format: username: password
# Add as many users as needed
# IMPORTANT: Change these default credentials!
users:
  admin: change_this_password
  user1: change_this_password_too

# Terminal Configuration
terminal:
  # Default shell command (will be overridden to powershell.exe on Windows)
  shell: bash
  # Terminal dimensions
  cols: 80
  rows: 30
  
# Note: After copying this file to config.yaml:
# 1. Update SSL certificate paths
# 2. Change default passwords
# 3. Set appropriate file permissions:
#    sudo chown root:root config.yaml
#    sudo chmod 600 config.yaml
